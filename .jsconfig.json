{
  "compilerOptions": {
    "module": "es6",
    "target": "es2020",
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}